<AnchorPane prefHeight="579.0" prefWidth="894.0" style="-fx-background-radius: 50;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.typejam.EnterNameController">
    <children>
      <StackPane prefHeight="579.0" prefWidth="894.0" style="-fx-background-radius: 50;">
         <children>
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#2b5237" height="579.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" style="-fx-arc-height: 0; -fx-arc-width: 0;" width="894.0" />
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="WHITE" height="490.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" style="-fx-arc-width: 70; -fx-arc-height: 70;" width="797.0" />
         </children>
      </StackPane>
      <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="107.0" prefHeight="428.0" prefWidth="800.0">
         <children>
            <Text fill="#2b5237" strokeType="OUTSIDE" strokeWidth="0.0" text="WHO ARE YOU?">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <font>
                  <Font name="Arial Bold" size="40.0" />
               </font>
            </Text>
            <Text fill="#2b5237" strokeType="OUTSIDE" strokeWidth="0.0" text="Please enter your name.">
               <font>
                  <Font name="Arial Bold" size="20.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Text>
            <Text fx:id="errorText" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter a name first!" visible="false">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="12.0" />
               </VBox.margin>
            </Text>
            <TextField fx:id="nameField" prefHeight="81.0" prefWidth="748.0" promptText="Enter here." style="-fx-border-color: #2B5237; -fx-border-width: 5; -fx-background-radius: 100; -fx-border-radius: 100;">
               <VBox.margin>
                  <Insets left="70.0" right="70.0" top="30.0" />
               </VBox.margin>
               <font>
                  <Font name="Arial" size="25.0" />
               </font>
               <padding>
                  <Insets left="30.0" />
               </padding>
            </TextField>
            <Button mnemonicParsing="false" onAction="#onNext" prefHeight="63.0" prefWidth="254.0" style="-fx-background-color: #2B5237; -fx-background-radius: 50;" text="NEXT" textFill="#f6b539">
               <font>
                  <Font name="Arial Bold" size="32.0" />
               </font>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
      <HBox alignment="CENTER_LEFT" layoutX="44.0" layoutY="38.0" prefHeight="90.0" prefWidth="108.0" style="-fx-background-radius: 100;">
         <children>
            <Button fx:id="back_btn" mnemonicParsing="false" onAction="#onBack" prefHeight="79.0" prefWidth="88.0" style="-fx-background-color: white; -fx-background-radius: 100; -fx-border-radius: 100;">
               <graphic>
                  <ImageView fitHeight="62.0" fitWidth="58.0" mouseTransparent="true" pickOnBounds="false" preserveRatio="true">
                     <image>
                        <Image url="@../../../assets/back.png" />
                     </image>
                  </ImageView>
               </graphic>
               <HBox.margin>
                  <Insets left="15.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
    </children>
