<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="rootPane" prefHeight="495.0" prefWidth="760.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.typejam.LeaderboardsController">
   <children>
      <StackPane prefHeight="495.0" prefWidth="760.0" style="-fx-background-radius: 50;">
         <children>
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#2b5237" height="495.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" style="-fx-arc-height: 0; -fx-arc-width: 0;" width="760.0" />
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="WHITE" height="419.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" style="-fx-arc-width: 70; -fx-arc-height: 70;" width="678.0" />
         </children>
      </StackPane>
      <VBox alignment="TOP_CENTER" layoutX="74.0" layoutY="65.0" prefHeight="397.0" prefWidth="611.0">
         <children>
            <Text fill="#2b5237" strokeType="OUTSIDE" strokeWidth="0.0" text="LEADERBOARDS" wrappingWidth="270.234375">
               <font>
                  <Font name="Arial Bold" size="32.0" />
               </font>
            </Text>
            <Text fill="#2b5237" strokeType="OUTSIDE" strokeWidth="0.0" text="See who's leading Type Jam">
               <font>
                  <Font name="Arial Bold" size="16.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Text>

            <!-- Filter Buttons Section -->
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <!-- MODE Button (Static - No Dropdown) -->
                  <VBox alignment="TOP_CENTER" spacing="8.0">
                     <children>
                        <Button fx:id="modeBtn" alignment="CENTER" contentDisplay="CENTER" maxWidth="260.0" minWidth="260.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="260.0" style="-fx-background-color: #2b5237; -fx-background-radius: 20;" text="CHALLENGE MODE" textFill="#f6b539">
                           <font>
                              <Font name="Arial Bold" size="16.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>

                  <!-- DIFFICULTY Button + Reset -->
                  <VBox alignment="TOP_CENTER" spacing="8.0">
                     <children>
                        <HBox alignment="CENTER" spacing="5.0">
                           <children>
                              <Button fx:id="difficultyBtn" alignment="CENTER" contentDisplay="CENTER" maxWidth="260.0" minWidth="260.0" mnemonicParsing="false" onAction="#toggleDifficultyDropdown" prefHeight="30.0" prefWidth="260.0" style="-fx-background-color: #2b5237; -fx-background-radius: 20;" text="DIFFICULTY â–¼" textFill="#f6b539">
                                 <font>
                                    <Font name="Arial Bold" size="16.0" />
                                 </font>
                              </Button>
                              <Button fx:id="difficultyResetBtn" managed="false" maxHeight="30.0" minHeight="30.0" minWidth="35.0" mnemonicParsing="false" onAction="#resetDifficultyFilter" prefHeight="30.0" prefWidth="35.0" style="-fx-background-color: #BE1F1F; -fx-background-radius: 15;" text="X" textFill="WHITE" visible="false">
                                 <font>
                                    <Font name="Arial Bold" size="14.0" />
                                 </font>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets top="15.0" />
               </padding>
            </HBox>

            <!-- Leaderboard Content Area with ScrollPane -->
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="249.0" prefWidth="611.0" style="-fx-background: transparent; -fx-background-color: transparent; -fx-border-color: transparent;">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
               <content>
                  <VBox fx:id="leaderboardContent" alignment="TOP_CENTER" prefHeight="246.0" prefWidth="607.0" spacing="6.0" style="-fx-background-color: transparent;" />
               </content>
            </ScrollPane>
         </children>
      </VBox>
      <HBox alignment="CENTER_LEFT" layoutX="47.0" layoutY="35.0" prefHeight="90.0" prefWidth="93.0" style="-fx-background-radius: 100;">
         <children>
            <Button fx:id="back_btn" mnemonicParsing="false" onAction="#onBack" prefHeight="63.0" prefWidth="69.0" style="-fx-background-color: white; -fx-background-radius: 100; -fx-border-radius: 100;">
               <graphic>
                  <ImageView fitHeight="52.0" fitWidth="52.0" mouseTransparent="true" pickOnBounds="false" preserveRatio="true">
                     <image>
                        <Image url="@../../../assets/back.png" />
                     </image>
                  </ImageView>
               </graphic>
               <HBox.margin>
                  <Insets left="15.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>

      <!-- Overlay Dropdowns (Positioned Dynamically) -->

      <VBox fx:id="difficultyDropdown" alignment="CENTER" managed="false" maxWidth="260.0" minWidth="260.0" prefWidth="260.0" spacing="6.0" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15; -fx-border-color: #2b5237; -fx-border-radius: 15; -fx-border-width: 2; -fx-padding: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0.3, 0, 2);" visible="false">
         <children>
            <Button fx:id="easyBtn" alignment="CENTER" maxWidth="240.0" minWidth="240.0" mnemonicParsing="false" onAction="#onEasyFilter" prefHeight="35.0" prefWidth="240.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #2b5237; -fx-border-radius: 10; -fx-border-width: 2; -fx-text-fill: #2b5237; -fx-font-weight: bold; -fx-font-size: 14px;" text="Easy" />
            <Button fx:id="mediumBtn" alignment="CENTER" maxWidth="240.0" minWidth="240.0" mnemonicParsing="false" onAction="#onMediumFilter" prefHeight="35.0" prefWidth="240.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #2b5237; -fx-border-radius: 10; -fx-border-width: 2; -fx-text-fill: #2b5237; -fx-font-weight: bold; -fx-font-size: 14px;" text="Medium" />
            <Button fx:id="hardBtn" alignment="CENTER" maxWidth="240.0" minWidth="240.0" mnemonicParsing="false" onAction="#onHardFilter" prefHeight="35.0" prefWidth="240.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #2b5237; -fx-border-radius: 10; -fx-border-width: 2; -fx-text-fill: #2b5237; -fx-font-weight: bold; -fx-font-size: 14px;" text="Hard" />
         </children>
      </VBox>
   </children>
</AnchorPane>
