<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane prefHeight="579.0" prefWidth="894.0" style="-fx-background-radius: 50;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.typejam.ReadySceneController">
    <children>
        <StackPane prefHeight="579.0" prefWidth="894.0" style="-fx-background-radius: 50;">
            <children>
                <javafx.scene.shape.Rectangle arcHeight="5.0" arcWidth="5.0" fill="#2b5237" height="579.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" style="-fx-arc-height: 0; -fx-arc-width: 0;" width="894.0" />
                <javafx.scene.shape.Rectangle arcHeight="5.0" arcWidth="5.0" fill="WHITE" height="490.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" style="-fx-arc-width: 70; -fx-arc-height: 70;" width="797.0" />
            </children>
        </StackPane>
      <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="45.0" prefHeight="395.0" prefWidth="797.0">
         <children>
            <TextFlow fx:id="titleTextFlow" textAlignment="CENTER">
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </TextFlow>
            <TextFlow fx:id="descriptionTextFlow" textAlignment="CENTER">
            </TextFlow>
            <ImageView fitHeight="241.0" fitWidth="316.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../assets/hands-typing.png" />
               </image>
            </ImageView>
            <Text fill="#2b5237" strokeType="OUTSIDE" strokeWidth="0.0" text="Crush the words, own the rhythm, and let your">
               <font>
                  <Font name="Arial Bold" size="22.0" />
               </font>
            </Text>
            <Text fill="#2b5237" strokeType="OUTSIDE" strokeWidth="0.0" text="skills do the talking.">
               <font>
                  <Font name="Arial Bold" size="22.0" />
               </font>
            </Text>
         </children>
      </VBox>
      <HBox alignment="CENTER" layoutX="50.0" layoutY="440.0" prefHeight="100.0" prefWidth="797.0" spacing="32.0">
         <children>
            <Button fx:id="mainMenuButton" mnemonicParsing="false" onAction="#onMainMenu" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #2B5237; -fx-background-radius: 100;" text="MAIN MENU" textFill="#f6b539">
               <font>
                  <Font name="Arial Bold" size="20.0" />
               </font>
            </Button>
            <Button fx:id="leaderboardButton" mnemonicParsing="false" onAction="#onLeaderboard" prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: #2B5237; -fx-background-radius: 100;">
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../assets/leaderboard.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#onSettings" prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: #2B5237; -fx-background-radius: 100;">
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../assets/settings.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="aboutButton" mnemonicParsing="false" onAction="#onAbout" prefHeight="60.0" prefWidth="60.0" style="-fx-background-color: #2B5237; -fx-background-radius: 100;">
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../assets/question-mark.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="letsTypeButton" mnemonicParsing="false" onAction="#onLetsType" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #2B5237; -fx-background-radius: 100;" text="LET'S TYPE" textFill="#f6b539">
               <font>
                  <Font name="Arial Bold" size="20.0" />
               </font>
            </Button>
         </children>
      </HBox>
    </children>
</AnchorPane>
