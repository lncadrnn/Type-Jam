<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="495.0" prefWidth="760.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.typejam.ResultSceneController">
   <children>
      <StackPane prefHeight="496.0" prefWidth="761.0">
         <children>
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#2b5237" height="506.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="768.0" />
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="WHITE" height="400.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" style="-fx-arc-height: 50; -fx-arc-width: 50;" width="670.0" />
         </children>
      </StackPane>
      <VBox alignment="TOP_CENTER" layoutX="45.0" layoutY="48.0" prefHeight="400.0" prefWidth="670.0">
         <children>
            <HBox fx:id="starsContainer" alignment="CENTER" prefWidth="670.0" spacing="40.0">
               <VBox.margin>
                  <Insets bottom="30.0" top="40.0" />
               </VBox.margin>
            </HBox>
            <Text fill="#2b5237" strokeType="OUTSIDE" strokeWidth="0.0" text="Good Effort! Practice makes perfect!" textAlignment="CENTER">
               <font>
                  <Font name="Arial Bold" size="30.0" />
               </font>
            </Text>
            <Text fill="#2b5237" strokeType="OUTSIDE" strokeWidth="0.0" text="Keep it up! Each star marks a step closer to mastery." textAlignment="CENTER">
               <font>
                  <Font name="Arial" size="20.0" />
               </font>
            </Text>
            <StackPane prefHeight="161.0" prefWidth="670.0">
               <children>
                  <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#f0f0f0" height="163.0" stroke="#cccccc" strokeType="INSIDE" strokeWidth="2.0" style="-fx-arc-height: 40; -fx-arc-width: 40;" width="375.0" />
                  <VBox prefHeight="172.0" prefWidth="412.0" spacing="10.0">
                     <children>
                        <HBox alignment="CENTER" prefWidth="295.0" spacing="10.0">
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Words per Minute:" HBox.hgrow="NEVER">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Text>
                              <Text fx:id="accuracyValue1" strokeType="OUTSIDE" strokeWidth="0.0" text="{WPM}" HBox.hgrow="ALWAYS">
                                 <font>
                                    <Font name="Arial Bold" size="16.0" />
                                 </font>
                              </Text>
                           </children>
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER" prefWidth="295.0" spacing="10.0">
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Accuracy:" HBox.hgrow="NEVER">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Text>
                              <Text fx:id="accuracyValue" strokeType="OUTSIDE" strokeWidth="0.0" text="{Accuracy}" HBox.hgrow="ALWAYS">
                                 <font>
                                    <Font name="Arial Bold" size="16.0" />
                                 </font>
                              </Text>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefWidth="295.0" spacing="10.0">
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Time Consumed:" HBox.hgrow="NEVER">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Text>
                              <Text fx:id="timeValue" strokeType="OUTSIDE" strokeWidth="0.0" text="{Time Left}" HBox.hgrow="ALWAYS">
                                 <font>
                                    <Font name="Arial Bold" size="16.0" />
                                 </font>
                              </Text>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefWidth="295.0" spacing="10.0">
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Characters Typed:" HBox.hgrow="NEVER">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Text>
                              <Text fx:id="charactersValue" strokeType="OUTSIDE" strokeWidth="0.0" text="{Characters}" HBox.hgrow="ALWAYS">
                                 <font>
                                    <Font name="Arial Bold" size="16.0" />
                                 </font>
                              </Text>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets top="12.0" />
               </VBox.margin>
            </StackPane>
         </children>
      </VBox>
      <HBox alignment="CENTER" layoutX="51.0" layoutY="361.0" prefHeight="107.0" prefWidth="670.0" spacing="100.0">
         <children>
            <Button fx:id="mainMenuButton" mnemonicParsing="false" onAction="#onMainMenu" prefHeight="31.0" prefWidth="173.0" style="-fx-background-color: #2B5237; -fx-background-radius: 100;" text="MAIN MENU" textFill="#f6b539">
               <font>
                  <Font name="Arial Bold" size="16.0" />
               </font>
            </Button>
            <Button fx:id="leaderboardButton" mnemonicParsing="false" onAction="#onLeaderboard" prefHeight="42.0" prefWidth="42.0" style="-fx-background-color: #2B5237; -fx-background-radius: 100;">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../assets/leaderboard.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="letsTypeButton" mnemonicParsing="false" onAction="#onLetsType" prefHeight="31.0" prefWidth="173.0" style="-fx-background-color: #2B5237; -fx-background-radius: 100;" text="TRY AGAIN?" textFill="#f6b539">
               <font>
                  <Font name="Arial Bold" size="16.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
